					{
						Main.switchState(this, new MainMenuState());
					}
				}
				else
				{
					Main.switchState(this, new MainMenuState());
				}

				// save the week's score if the score is valid
				if (SONG.validScore)
					Highscore.saveWeekScore(storyWeek, campaignScore, storyDifficulty);

				// flush the save
				FlxG.save.flush();
			}
			else
				songEndSpecificActions();
		}
		//
	}

